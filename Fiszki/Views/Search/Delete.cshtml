@model Fiszki.Models.Fiszkii

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/css/util.css" rel="stylesheet" />
<link href="~/css/main.css" rel="stylesheet" />
<div>
    <h1 style="text-align: center">Usuwasz fiszkę, jesteś tego pewna/y?</h1>
</div>
<hr style="height:2px;border-width:0;color:gray;background-color:blueviolet;margin-bottom:50px;" />

<div style="display: flex; align-items: center; justify-content: center;">

    <dl class="center">

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nazwa_fiszki)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nazwa_fiszki)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Opis)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Opis)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Przedmiot)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Przedmiot)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Kategoria)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Kategoria)
        </dd>

    </dl>


</div>
<div style="text-align: right; margin-bottom: 20px;" class="form-group">
    <form asp-action="Delete">
        <input type="submit" value="Usuń" class="btn btn-danger" /> 
        
    </form>
    
</div>
<div><a asp-controller="Search" asp-action="Przegladaj">Wróć do listy fiszek</a></div>